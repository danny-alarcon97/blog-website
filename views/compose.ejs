<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input
      type="text"
      name="postTitle"
      autocomplete="off"
      class="form-control"
    />

    <label class="form-label">Post</label>
    <textarea 
      name="postBody" 
      rows="5" 
      cols="30" 
      class="form-control">
    </textarea>
  </div>
  <button type="submit" name="" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>